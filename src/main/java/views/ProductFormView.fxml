        <Font size="18.0" />
      </font>
    </Text>
    <VBox layoutX="151.0" layoutY="159.0" prefHeight="108.0" prefWidth="298.0" spacing="10.0">
      <children>
        <TextField fx:id="nameProductField" promptText="Product's Name" />
        <TextField fx:id="descriptionProductField" promptText="Product Description" />
        <TextField fx:id="valueUnitProductField" promptText="Unitary Value" />
      </children>
    </VBox>
  <Button fx:id="confirmProductBt" layoutX="277.0" layoutY="300.0" mnemonicParsing="false" onAction="#onConfirmProductBt" text="Confirm" />
  </children>
